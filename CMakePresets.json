{
  "version": 7,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_POSITION_INDEPENDENT_CODE": "ON",
        "CMAKE_INSTALL_RPATH_USE_LINK_PATH": "ON",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Optimized release build with stripped binaries on Unix platforms.",
      "inherits": ["base"],
      "binaryDir": "${sourceDir}/build/${presetName}/${hostSystemName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "rolling",
      "displayName": "RelWithDebInfo",
      "description": "Rolling release build with debug symbols.",
      "inherits": ["base"],
      "binaryDir": "${sourceDir}/build/${presetName}/${hostSystemName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "rolling",
      "configurePreset": "rolling"
    }
  ]
}
